@{
}

<hr />
<div class="container">
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Cliente</th>
                <th>Saldo</th>
                <th>Servicio</th>
                <th>Medio de pago</th>
                <th>Estado</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>         
            @foreach(var item in Model)
            {
                
                <tr>
                        <th>@item.ClienteId</th>
                        <td>@item.Saldo</td>
                        <td>@item.ServicioAdquiridoId</td>
                        <td>@item.MedioDePagoId</td>
                        <td>@item.EstadoId</td>
                        <td>
                            <a class="btn btn-info btn-sm">Editar</a>
                            <a class="btn btn-warning btn-sm disabled">Eliminar</a>
                        </td>
                </tr>
            }
            
            
        </tbody>
    </table>
</div>

